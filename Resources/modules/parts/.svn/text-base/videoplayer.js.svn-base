exports.create = function(parent ) {
	var actind = require('modules/parts/actind').create('Starte Filmwiedergabe â€¦');
	parent.add(actind);
	Ti.App.Model.getPlaylistByHomepage(parent.link, function(_playlist) {
		actind.hide();
		self.url = _playlist;
	 Ti.API.log(_playlist);
		self.play();
	});
	var self = Ti.Media.createVideoPlayer({
		width : Ti.UI.FILL,
		height : Ti.Platform.displayCaps.platformWidth * 0.6,
		allowsAirPlay : true,
		autoplay : false,
		bottom : 20,
		parent : parent,
		opacity : 0,
		mediaControlStyle : Ti.Media.VIDEO_CONTROL_DEFAULT,
		scalingMode : Ti.Media.VIDEO_SCALING_MODE_FILL
	});
	
	self.addEventListener('playing', function(_e) {
		self.animate(Ti.UI.createAnimation({
			opacity : 1,
			duration : 800
		}));
	});
	// we have only link to movie homepage, but we need playlist:
	
	return self;
}
